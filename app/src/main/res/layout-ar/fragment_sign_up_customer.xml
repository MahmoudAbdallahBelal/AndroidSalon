<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/width_scren"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_textview"
                android:background="@drawable/background_edit_text"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/name_icon" />

                <EditText
                    android:id="@+id/name_user"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="@string/name_user"
                    android:inputType="text" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@drawable/background_edit_text"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/user_name" />

                    <EditText
                        android:id="@+id/login_user"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_textview"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="@string/login_user"
                        android:inputType="text" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/usernameverif"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp" />

                <ProgressBar
                    android:id="@+id/usernameprogress"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_textview"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/genre" />

                <EditText
                    android:id="@+id/genre_user"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@null"
                    android:hint="@string/genre_user"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_textview"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/phone" />

                <EditText
                    android:id="@+id/phone_user"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="@string/phone_user"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_textview"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/email_user"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="@string/email_user"
                    android:inputType="textEmailAddress"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_textview"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_edit_text"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/password"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/condition"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/condi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/app_condition"
                        android:textColor="#969696"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="130dp"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="-8dp"
                        android:background="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <salon.octadevtn.sa.salon.Utils.Circlebutton.CircularProgressButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_textview"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:cpb_cornerRadius="48dp"
                    app:cpb_iconError="@drawable/error"
                    app:cpb_textIdle="@string/sign_up_button" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/prograess"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:duration="50"
                    app:indicatorColor="@color/colorPrimary"
                    app:indicatorName="BallPulseIndicator" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#646464" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/or"
                    android:textColor="#646464" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#646464" />
            </LinearLayout>
            <!--
                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button_fb"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:padding="25dp"
                            android:visibility="gone"/>-->

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/button_twitter_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
