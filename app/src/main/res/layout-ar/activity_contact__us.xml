<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="salon.octadevtn.sa.salon.Contact_US"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/contenu">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="#646464"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:padding="10dp"
        android:textSize="14dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Informations"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="#646464"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="200dp"
            android:background="@drawable/background_edit_text3"/>

        />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:minWidth="150dp"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:hint="@string/Your_Mail"
            android:textColorHint="#969696"
            android:padding="10dp"
            android:background="@drawable/background_edit_text3"/>
        <MultiAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:maxLines="10"
            android:hint="@string/subject"
            android:textColorHint="#969696"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/background_edit_text3"/>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/button_colored"
        android:layout_below="@+id/contenu"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="@string/Send"
        android:textColor="@android:color/white"/>
</RelativeLayout>
