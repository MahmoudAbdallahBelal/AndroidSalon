<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context="salon.octadevtn.sa.salon.Contact_US">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar_color"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:id="@+id/back1"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="2dp"
                    android:src="@drawable/back2" />
                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/contact"
                android:textColor="@android:color/white"
                android:textSize="16dp" />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/bar"

        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/contenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/contact_us"
            android:textColor="#646464"
            android:textSize="14dp"
             />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/content"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/Informations"
            android:textColor="#646464"
            android:textSize="14dp"
           />

        <EditText
            android:id="@+id/reason"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_edit_text3"
            android:hint="@string/reason"
            android:maxLines="1"
            android:minWidth="150dp"
            android:padding="10dp"
            android:textColorHint="#969696"
            android:textSize="12dp"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_edit_text3"
            android:hint="@string/Your_Mail"
            android:maxLines="1"
            android:minWidth="150dp"
            android:padding="10dp"
            android:textColorHint="#969696"
            android:textSize="12dp"/>

        <MultiAutoCompleteTextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_edit_text3"
            android:hint="@string/subject"
            android:maxLines="10"
            android:minHeight="90dp"
            android:padding="10dp"
            android:textColorHint="#969696"
            android:textSize="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contenu"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_colored"
        android:text="@string/Send"
        android:layout_gravity="left"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/white" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
