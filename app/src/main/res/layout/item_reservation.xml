<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:folding-cell="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/folding_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            folding-cell:additionalFlipsCount="4"
            folding-cell:backSideColor="#969696">

            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/photo1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/calendar" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="xxxxxxx"
                                    android:textColor="#464646"
                                    android:textSize="16dp" />


                                <TextView
                                    android:id="@+id/left_time1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#969696"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/menu1"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:padding="5dp"
                                android:src="@drawable/menu" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/description1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="#969696"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/etat1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/titre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/reason_decline" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">

                                <MultiAutoCompleteTextView
                                    android:id="@+id/reason"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg"
                                    android:gravity="top"
                                    android:minHeight="120dp"
                                    android:padding="10dp" />

                                <LinearLayout
                                    android:id="@+id/face"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg1"
                                    android:minHeight="120dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <salon.octadevtn.sa.salon.Utils.Circlebutton.CircularProgressButton
                                android:id="@+id/send_reason"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:layout_margin="10dp"
                                android:padding="0dp"
                                android:text="@string/send"
                                android:textColor="@color/white"
                                android:textSize="14dp"

                                app:cpb_cornerRadius="48dp"
                                app:cpb_iconError="@drawable/error"
                                app:cpb_textIdle="@string/send" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxx"
                                android:textColor="#464646"
                                android:textSize="16dp" />


                            <TextView
                                android:id="@+id/left_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#969696"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:padding="5dp"
                            android:src="@drawable/menu" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ebebeb"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                        android:textColor="#969696"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/buton1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/buton"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="0.4"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/decline"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_colored"
                                android:text="@string/decline"
                                android:textColor="@android:color/white"
                                android:textSize="14dp" />

                            <salon.octadevtn.sa.salon.Utils.Circlebutton.CircularProgressButton
                                android:id="@+id/aprouve"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_bouton_login"
                                android:padding="0dp"
                                android:text="@string/Accept"
                                android:textColor="@android:color/white"
                                android:textSize="14dp"

                                app:cpb_cornerRadius="48dp"
                                app:cpb_iconError="@drawable/error"
                                app:cpb_textIdle="@string/send" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buton2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/no"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_colored"
                                android:text="@string/No"

                                android:textColor="@android:color/white"
                                android:textSize="14dp" />

                            <salon.octadevtn.sa.salon.Utils.Circlebutton.CircularProgressButton
                                android:id="@+id/yes"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:padding="0dp"
                                android:text="@string/Yes1"
                                android:textColor="@android:color/white"
                                android:textSize="14dp"

                                app:cpb_cornerRadius="48dp"
                                app:cpb_iconError="@drawable/error"
                                app:cpb_textIdle="@string/Yes1" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/promotion_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:shadowColor="#565656"
                                android:shadowDx="5"
                                android:shadowDy="5"
                                android:shadowRadius="5"
                                android:text="@string/promotion"
                                android:textColor="#fff"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:shadowColor="#565656"
                                android:shadowDx="5"
                                android:shadowDy="5"
                                android:shadowRadius="5"
                                android:text="@string/promotion"
                                android:textColor="#fff"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/promotiondiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:shadowColor="#565656"
                                android:shadowDx="5"
                                android:shadowDy="5"
                                android:shadowRadius="5"
                                android:text="@string/promotion"
                                android:textColor="#fff"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_below="@+id/image"
                            android:layout_marginTop="10dp"
                            android:background="#ebebeb" />

                        <RatingBar
                            android:id="@+id/myRatingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBar" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </com.ramotion.foldingcell.FoldingCell>
    </LinearLayout>
</android.support.v7.widget.CardView>