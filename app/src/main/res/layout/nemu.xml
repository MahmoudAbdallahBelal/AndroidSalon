<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:layout_alignParentBottom="true"
    android:background="#fff"
    android:elevation="35dp">

    <LinearLayout
        android:id="@+id/revealiew"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:alpha="0.4"
        android:background="@color/colorPrimaryDark"

        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/reservation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_reservation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_reservation_icon" />

            <TextView
                android:id="@+id/text_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/reservation"

                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/explore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_explore"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_explore_icon" />

            <TextView
                android:id="@+id/text_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:text="@string/explore"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_notification_icon" />

            <TextView
                android:id="@+id/text_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:text="@string/notication"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_favorit"
                android:layout_width="25dp"

                android:layout_height="25dp"
                android:src="@drawable/ic_favorite_icon" />

            <TextView
                android:id="@+id/text_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/favorit"


                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:focusable="true">

                <ImageView
                    android:id="@+id/image_promotion"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_promotion_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dip"
                        android:layout_toRightOf="@+id/image_promotion"
                        android:background="@drawable/badge_count2"
                        android:contentDescription="badge"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/promotion"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
